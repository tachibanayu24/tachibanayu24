---
// Load profile data
import meData from '../../public/me.json';

const lang = 'ja'; // Default language for SSR

// Generate metadata
const title = `${meData.name.ja} (${meData.name.en}) - Software Engineer from Tokyo`;
const description = `${meData.name.ja} (${meData.name.en}) is a Software Engineer based in Tokyo, Japan. Connect with me on social media, read my blog, and explore my work.`;
const author = `${meData.name.en}, ${meData.name.ja}`;

// Generate company HTML
const fulltimeLabel = meData.companies.fulltime.label[lang];
const fulltimeLinks = meData.companies.fulltime.list
  .map((c) => `<a href="${c.url}" class="text-link text-engraved" target="_blank" rel="noopener">${c.name}</a>`)
  .join(' / ');

const contractLabel = meData.companies.contract.label[lang];
const contractLinks = meData.companies.contract.list
  .map((c) => `<a href="${c.url}" class="text-link text-engraved" target="_blank" rel="noopener">${c.name}</a>`)
  .join(' / ');

const companyHtml = `${fulltimeLabel}<br>${fulltimeLinks}<br><br>${contractLabel}<br>${contractLinks}`;

// Bio with line breaks
const bioHtml = meData.bio[lang].split('\n').join('<br>');

// Links title
const linksTitle = lang === 'ja' ? 'SNS„Å™„Å©' : 'Connect with me';

// Structured Data (JSON-LD)
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: meData.name.en,
  alternateName: [
    meData.name.ja,
    meData.name.ja.replace(' ', ''),
    'tachibanayu24',
  ],
  url: 'https://tachibanayu24.com',
  image: 'https://tachibanayu24.com/images/me.jpg',
  jobTitle: 'Software Engineer',
  worksFor: {
    '@type': 'Organization',
    name: meData.companies.fulltime.list[0].name,
    url: meData.companies.fulltime.list[0].url,
  },
  affiliation: meData.companies.contract.list.map((c) => ({
    '@type': 'Organization',
    name: c.name,
    url: c.url,
  })),
  sameAs: meData.links.map((link) => link.url),
};

// Favorites
const favoritesHtml = meData.backside.favorites.list[lang]
  .map((item) => `<span class="favorite-tag text-engraved">${item}</span>`)
  .join('');
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <meta name="theme-color" id="theme-color" content="#e8eef3" />
    <!-- PWA / Mobile Web App -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      id="apple-status-bar"
      content="default"
    />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://tachibanayu24.com/" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text x=%2250%%22 y=%2250%%22 style=%22dominant-baseline:central;text-anchor:middle;font-size:90px;%22>üê∞</text></svg>"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://tachibanayu24.com/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://tachibanayu24.com/images/me.jpg"
    />
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:locale:alternate" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@tachibanayu24" />
    <meta name="twitter:creator" content="@tachibanayu24" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://tachibanayu24.com/images/me.jpg"
    />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData, null, 2)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700&family=Zen+Kaku+Gothic+New:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Styles -->
    <link rel="stylesheet" href="/styles/index.css" />

    <!-- Dynamic Background System -->
    <script type="module" src="/background/index.js"></script>

    <script type="module" src="/background/debug.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="card-container">
        <div class="card">
          <!-- Front Side -->
          <div class="card-face card-front">
            <div class="shimmer-effect"></div>
            <div class="fresnel-effect"></div>
            <button
              class="card-action-btn lang-toggle"
              id="lang-toggle"
              aria-label="Switch language"
            >
              EN
            </button>
            <button
              class="card-action-btn download-json-btn"
              id="download-json-front"
              aria-label="Download profile JSON"
            ></button>
            <div class="profile">
              <div class="avatar-wrapper">
                <img
                  src="/images/me.jpg"
                  alt="Yuto Tachibana (Á´ãËä± ÂÑ™Êñó)"
                  class="avatar"
                />
              </div>
              <h1 class="name" id="name">{meData.name.ja} ({meData.name.en})</h1>
              <div class="bio text-engraved" id="bio" set:html={bioHtml}></div>
              <div class="company text-engraved" id="company" set:html={companyHtml}></div>
            </div>
            <div class="divider"></div>
            <p class="links-title text-engraved">{linksTitle}</p>
            <div class="links-grid" id="links">
              <span class="loading">Loading...</span>
            </div>
          </div>

          <!-- Back Side -->
          <div class="card-face card-back">
            <div class="shimmer-effect"></div>
            <div class="fresnel-effect"></div>
            <button
              class="card-action-btn lang-toggle"
              id="lang-toggle-back"
              aria-label="Switch language"
            >
              EN
            </button>
            <button
              class="card-action-btn download-json-btn"
              id="download-json-back"
              aria-label="Download profile JSON"
            ></button>

            <div class="profile">
              <div class="avatar-wrapper">
                <img
                  src="/images/hokori.jpg"
                  alt="Hokori the rabbit"
                  class="avatar"
                />
              </div>
            </div>

            <div class="back-section">
              <h2 class="back-section-title text-engraved" id="about-label">
                {meData.backside.about.label[lang]}
              </h2>
              <p
                class="back-section-content text-engraved"
                id="about-content"
              >{meData.backside.about.content[lang]}</p>
            </div>

            <div class="back-section">
              <h2 class="back-section-title text-engraved" id="favorites-label">
                {meData.backside.favorites.label[lang]}
              </h2>
              <div class="favorites-list" id="favorites-list" set:html={favoritesHtml}></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script type="module" src="/profile/index.js"></script>
    <script type="module" src="/card-effects.js"></script>
  </body>
</html>
