{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tachibanayu24.com/me.schema.json",
  "title": "Personal Profile",
  "description": "Schema for personal profile data with multilingual support",
  "type": "object",
  "required": ["name", "companies", "bio", "links", "backside"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "$ref": "#/$defs/localizedString",
      "description": "Full name in each language"
    },
    "companies": {
      "type": "object",
      "required": ["fulltime", "contract"],
      "properties": {
        "fulltime": {
          "$ref": "#/$defs/companyGroup",
          "description": "Full-time employment"
        },
        "contract": {
          "$ref": "#/$defs/companyGroup",
          "description": "Contract / Advisor positions"
        }
      },
      "additionalProperties": false
    },
    "backside": {
      "type": "object",
      "description": "Content for the back side of the card",
      "required": ["about", "favorites"],
      "properties": {
        "about": {
          "type": "object",
          "description": "Career/background description",
          "required": ["label", "content"],
          "properties": {
            "label": {
              "$ref": "#/$defs/localizedString",
              "description": "Section label"
            },
            "content": {
              "$ref": "#/$defs/localizedString",
              "description": "About text content"
            }
          },
          "additionalProperties": false
        },
        "favorites": {
          "type": "object",
          "description": "List of favorite things",
          "required": ["label", "list"],
          "properties": {
            "label": {
              "$ref": "#/$defs/localizedString",
              "description": "Section label"
            },
            "list": {
              "type": "object",
              "description": "List of favorite items per language",
              "required": ["en", "ja"],
              "properties": {
                "en": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "ja": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "bio": {
      "$ref": "#/$defs/localizedString",
      "description": "Bio text (supports \\n for line breaks)"
    },
    "links": {
      "type": "array",
      "description": "Social media and other links",
      "items": {
        "$ref": "#/$defs/link"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "$defs": {
    "localizedString": {
      "type": "object",
      "required": ["en", "ja"],
      "properties": {
        "en": {
          "type": "string",
          "description": "English text"
        },
        "ja": {
          "type": "string",
          "description": "Japanese text"
        }
      },
      "additionalProperties": false
    },
    "company": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Company name"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Company URL or team page"
        }
      },
      "additionalProperties": false
    },
    "companyGroup": {
      "type": "object",
      "required": ["label", "list"],
      "properties": {
        "label": {
          "$ref": "#/$defs/localizedString",
          "description": "Label text (e.g., 'Full-time at')"
        },
        "list": {
          "type": "array",
          "items": { "$ref": "#/$defs/company" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "link": {
      "type": "object",
      "required": ["name", "url", "icon"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name of the link"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL of the link"
        },
        "icon": {
          "type": "string",
          "description": "Icon identifier (maps to Simple Icons slug or fallback)",
          "enum": [
            "facebook",
            "linkedin",
            "github",
            "x",
            "note",
            "blog",
            "wantedly",
            "qiita",
            "zenn",
            "resume"
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
